<div class="wrapper">
  <%= render "shared/side" %>
  <div class="container">
    <div class="header">
      <div class="user-name">
        <%= "#{@nickname}さんのマイページ" %>
      </div>
      <!--自己紹介文を表示-->
      <div class="user-introduction">
        <%= @introduction %>
      </div>
    </div>

    <div class="tweet-main">
      <% @tweets.each do |tweet| %>
        <!--投稿した内容のIDとユーザーIDが一致しているものだけ表示（自分の投稿のみ表示）-->
        <% if tweet.user_id == @user.id %>
          <div class="tweet-text">
            <!--投稿ユーザー名の表示-->
            <div class="name-id">
              <%= "#{tweet.user.nickname}" %>
            </div>
            <!--投稿内容の表示-->
            <div class="text-id">
              <%= link_to tweet.text, tweet_path(tweet.id) %><br>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
