<div class="wrapper">
  <!--サイドバーの読み込み-->
  <%= render "shared/side" %>
  <div class="container"> 
    <div class="fav">
      <%= "#{current_user.nickname}さんのお気に入り一覧" %>
    </div>
    <!--お気に入りに登録した投稿のみ表示-->
    <% @tweets.each do |tweet| %>
      <div class="tweet-text">
        <!--投稿したユーザー名の表示-->
        <div class="name-id">
          <%= tweet.user.nickname %>
        </div>
        <!--投稿内容の表示-->
        <div class="text-id">
          <%= tweet.text %>
        </div>
      </div>
    <% end %>
  </div>
</div>