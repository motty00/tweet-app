<div class="wrapper">
  <!--サイドバーの読み込み-->
  <%= render "shared/side" %>
  <div class="tweet-container">
    <div class="tweet-header">
        <div class="new-container">
          <% if user_signed_in? %>
            <h3>新規投稿</h3>
            <%= form_with(model: @tweet, url: tweets_path, remote: true) do |form| %>
              <%= form.text_area :text, placeholder: "ツイートしてみよう！", size: "70 x 2" %>
              <%= form.submit "投稿する" %>
            <% end %>
          <% end %>
        </div>
    </div>
    <div id="tweet-new">
      <!--投稿一覧の表示の読み込み-->
      <%= render "tweet_new" %>
    </div>
  </div>
</div>


