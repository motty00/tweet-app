<div class="wrapper">
  <!--サイドバーの読み込み-->
  <%= render "shared/side" %>
  <div class="tweet-container">
    <div class="tweet-header">
      <div class="post">
        <%= link_to "新規投稿", new_tweet_path %>
      </div>
    </div>

    <div class="tweet-main">
      <% @tweets.each do |tweet| %>
        <div class="tweet-text">
          <!--投稿ユーザー名の表示-->
          <div class="name-id">
            <%= link_to "#{tweet.user.nickname}", user_path(tweet.user.id) %>
          </div>
            <!--投稿内容の表示-->
          <div class="text-id">
            <%= link_to tweet.text, tweet_path(tweet.id) %><br>
          <div id="tweet_<%= tweet.id %>">
            <!--お気に入りボタンの表示-->
            <%= render "index", tweet: tweet %>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


