<div class="wrapper">
  <div class="side-container">
    <div class="side-header">
      <div class="name">
        <%= link_to "hoge", "" %>
      </div>
    </div>

    <div class="side-list">
      <div class="log">
        <%= link_to "ログイン", "" %><br>
        <%= link_to "ログアウト", "" %><br>
        <%= link_to "新規登録", "" %>
      </div>
    </div>
  </div>


  <div class="tweet-container">
    <div class="tweet-header">
      <div class="post">
        <%= link_to "新規投稿", "" %>
      </div>
    </div>


    <div class="tweet-main">
      <% @tweets.each do |tweet| %>
        <div class="chat-content">
          <div class="tweet-text">
            <div class="name-id">
              <%= tweet.id %>
            </div>
            <div class="text-id">
              <%= tweet.text %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


