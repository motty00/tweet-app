<div class="wrapper">
  <%= render "shared/side" %>
  <div class="tweet-container">
    <div class="tweet-header">
      <div class="post">
        <%= link_to "新規投稿", new_tweet_path %>
      </div>
    </div>


    <div class="tweet-main">
      <% @tweets.each do |tweet| %>
        <div class="tweet-text">
          <div class="name-id">
            <%= link_to "#{tweet.user.nickname}", user_path(tweet.user.id) %>
          </div>
          <div class="text-id">
            <%= link_to tweet.text, tweet_path(tweet.id) %><br>

            <% if user_signed_in? %>
              <% if current_user.liked_by?(tweet.id) %>
                <%= link_to destroy_like_path(tweet), method: :DELETE do %>
                  <span class="fa fa-heart unlike-btn"></span> 
                <% end %>
              <% else %>
                <%= link_to create_like_path(tweet), method: :POST do %>
                  <span class="fa fa-heart like-btn"></span> 
                <% end %>
              <% end %>
            <%end%>


          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


